<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Create new Listing</h3><br>
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input type="text" class="form-control" name="listing[title]" placeholder="enter title"  required>
                    <div class="valid-feedback">
                        Title looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea type="text" class="form-control" name="listing[description]"  required></textarea>
                    <div class="invalid-feedback">
                        Please provide a short description.
                    </div>
                </div>

                <div class="mb-3">
                    <label  for="image" class="form-label">Upload Listing Image</label>
                    <input type="file" class="form-control" name="listing[image]"  required>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label" >Price</label>
                        <input  type="text" class="form-control" name="listing[price]"  placeholder="1200"  required>
                        <div class="invalid-feedback">
                            Please provide a valid price...
                        </div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label class="form-label" for="country">Country</label>
                        <input type="text" class="form-control" name="listing[country]" placeholder="India"  required>
                        <div class="invalid-feedback">
                            Please provide a valid country name...
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input type="text" class="form-control" name="listing[location]" placeholder="Mumbai, Maharastra" 
                        required>
                    <div class="invalid-feedback">
                        Please provide a valid location..
                    </div>
                </div>

                <br>
                <button class="btn btn-dark add-btn">Add</button>
                <br><br>

            </form>
        </div>
    </div>